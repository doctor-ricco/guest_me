<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mensagem de Boas-Vindas -->
            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bem-vindo(a), [Nome do Host]!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />

            <!-- Botão Completar Perfil -->
            <Button
                android:id="@+id/completeProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completar Perfil"
                android:layout_marginTop="16dp" />

            <!-- Preferências -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferências de Atividades:"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <CheckBox
                android:id="@+id/preferenceCuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Culinária" />

            <CheckBox
                android:id="@+id/preferenceHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="História" />

            <!-- Botão para salvar preferências -->
            <Button
                android:id="@+id/savePreferencesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Preferências"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>