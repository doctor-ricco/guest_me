<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Foto de perfil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile" /> <!-- Placeholder -->

        <!-- Mensagem de boas-vindas -->
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carregando boas-vindas..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Endereço do usuário -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregando endereço..."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Telefone do usuário -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregando telefone..."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Descrição do host -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/host_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregando descrição do host..."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Preferências -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferences:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/host_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carregando preferências..."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Botão para editar perfil -->
        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
